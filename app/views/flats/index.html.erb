<div class="container">
  <div class="row d-flex justify-content-center g-4">
  <%= link_to "Create new flat", new_flat_path, class: 'd-flex justify-content-center bm-4' %>
    <% @flats.each do |flat| %>
      <div class="col-4 shadow-lg p-4 bg-white mt-4">
        <h2><%= flat.name %></h2>
        <p>Address: <%= flat.address %></p>
        <p><%= flat.description %></p>
        <p>Price per night: $<%= flat.price_per_night %></p>
        <p>Number of guests: <%= flat.number_of_guests %></p>
      </div>
    <% end %>
  </div>
</div>
